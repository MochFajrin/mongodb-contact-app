<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact Detail</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Contact not found. <br><a href="/contact" class="alert-link fw-normal">&laquo; Go to Contact
                        List.</a>
                </div>
                <% }else{ %>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.username %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= contact.mobilePhone %>
                            </h6>
                            <p class="card-text">
                                <%= contact.email %>
                            </p>
                            <a href="/contact/edit-contact/<%= contact.id %>" class="btn btn-primary btn-sm">Update</a>
                            <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                                <input type="hidden" name="id" value="<%= contact.id %>">
                                <button type="button" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure to delete this contact?')">Delete</button>
                            </form>
                            <a href="/contact" class="card-link d-block mt-3">&laquo; Back to Contact</a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>