<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h1>Contact List</h1>
      <a href="/contact/add" class="btn btn-primary btn-sm my-3">Add Contact</a>
      <% if (msg.length!==0) { %>
        <div class="alert alert-success fw-bold" role="alert">
          <%= msg %>
        </div>
        <% } %>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Username</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (contacts.length===0) { %>
                <tr>
                  <td colspan="4">
                    <div class="alert alert-danger fw-bold text-center" role="alert">Contact Empty</div>
                  </td>
                </tr>
                <% } %>
                  <% contacts.forEach((contact,i)=>{ %>
                    <tr>
                      <th scope="row">
                        <%= i+1%>
                      </th>
                      <td>
                        <%= contact.username %>
                      </td>
                      <td>
                        <%= contact.mobilePhone %>
                      </td>
                      <td><a href="/contact/<%= contact._id %>" class="btn btn-success badge rounded-pill"><i
                            class="bi bi-info-circle"></i>
                          Detail</a>
                      </td>
                    </tr>
                    <%}) %>
            </tbody>
          </table>
    </div>
  </div>
</div>